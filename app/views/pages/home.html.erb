<div>
  <h1 class="font-semibold text-4xl lg:text-6xl lg:text-center font-[Pacifico]">Pawbies</h1>
  <p class="text-3xl lg:text-center"><%= t(".hai") %> 🏳️‍🌈♂️</p>

  <section class="mt-18 flex flex-col items-center lg:w-1/2 lg:mx-auto">
    <%= image_tag "femboy/lying.webp",
      loading: "eager",
      fetchpriority: "high",
      width: 810, height: 540,
      alt: t(".lying_alt"),
      class: "rounded-sm drop-shadow-md drop-shadow-pastel-blue" %>
    <span class="mt-3 text-2xl">^^^</span>
    <span class="text-2xl lg:text-3xl"><%= t(".femboy") %> 💖</span>
  </section>

  <section class="mt-18 flex flex-col items-center lg:w-2/3 lg:mx-auto">
    <div class="flex items-center justify-center -space-x-8">
      <%= image_tag "gym/gym_a.webp", alt: t(".gym_a_alt"), width: 384, height: 512, loading: "lazy", class: "w-1/3 md:w-1/4 h-auto rounded-xl border border-black transform -rotate-3 z-30 shadow-sm shadow-pastel-blue" %>
      <%= image_tag "gym/gym_b.webp", alt: t(".gym_b_alt"), width: 378, height: 519, loading: "lazy", class: "w-1/3 md:w-1/4 h-auto rounded-xl border border-black transform rotate-2 z-20 shadow-sm shadow-pastel-blue" %>
      <%= image_tag "gym/gym_c.webp", alt: t(".gym_c_alt"), width: 384, height: 512, loading: "lazy", class: "w-1/3 md:w-1/4 h-auto rounded-xl border border-black transform -rotate-3 z-10 shadow-sm shadow-pastel-blue" %>
    </div>

    <span class="mt-3 text-2xl">^^^</span>
    <span class="text-2xl lg:text-3xl"><%= t(".workout") %> 🏋️</span>
  </section>

  <section class="mt-18 flex flex-col items-center w-2/3 lg:w-1/2 mx-auto">
    <div class="md:hidden mt-2 relative w-2/3 aspect-video mx-auto" data-controller="homepage--programming-animation">
      <%= image_tag "programming/rails.svg", alt: "Ruby on Rails Logo", loading: "lazy", data: { homepage__programming_animation_target: "image" }, class: "absolute inset-0 w-full h-full object-contain transition-opacity duration-1000 opacity-100" %>
      <%= image_tag "programming/php.svg",   alt: "PHP Logo", loading: "lazy", data: { homepage__programming_animation_target: "image" }, class: "absolute inset-0 w-full h-full object-contain transition-opacity duration-1000 opacity-0" %>
      <%= image_tag "programming/mysql.svg", alt: "MySQL Logo", loading: "lazy", data: { homepage__programming_animation_target: "image" }, class: "absolute inset-0 w-full h-full object-contain transition-opacity duration-1000 opacity-0" %>
      <%= image_tag "programming/azure.svg", alt: "Azure Logo", loading: "lazy", data: { homepage__programming_animation_target: "image" }, class: "absolute inset-0 w-full h-full object-contain transition-opacity duration-1000 opacity-0" %>
      <%= image_tag "programming/cpp.svg",   alt: "C++ Logo", loading: "lazy", data: { homepage__programming_animation_target: "image" }, class: "absolute inset-0 w-full h-full object-contain transition-opacity duration-1000 opacity-0" %>
    </div>
    <div class="hidden md:grid grid-cols-2 gap-3">
      <%= image_tag "programming/rails.svg", alt: "Ruby on Rails Logo", loading: "lazy", class: "w-full" %>
      <%= image_tag "programming/php.svg",   alt: "PHP Logo", loading: "lazy", class: "w-full" %>
      <%= image_tag "programming/mysql.svg", alt: "MySQL Logo", loading: "lazy", class: "w-full" %>
      <%= image_tag "programming/azure.svg", alt: "Azure Logo", loading: "lazy", class: "w-full" %>
    </div>
    <span class="mt-3 text-2xl">^^^</span>
    <span class="text-2xl lg:text-3xl"><%= t(".programming") %> 💻</span>
    <p class="lg:text-xl"><%= t(".programming_disclaimer") %></p>
  </section>
</div>
