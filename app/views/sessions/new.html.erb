<div class="mx-auto">
  <h1 class="font-semibold text-4xl lg:text-6xl lg:text-center font-[Pacifico]">Login</h1>

  <div class="my-18 flex flex-col items-center">
    <%= image_tag "ai/login.webp", alt: t(".anime_login_alt"), width: 1024, height: 1024, class: "aspect-square w-2/3 md:w-1/2 lg:w-1/3 rounded-md border" %>
    <p><%= t(".ai_apology") %></p>
  </div>

  <%= form_with url: session_url, class: "mx-auto md:w-2/3" do |form| %>
    <div class="my-5">
      <%= form.email_field :email_address,
        required: true,
        autofocus: true,
        autocomplete: "username",
        placeholder: t(".email_placeholder"),
        value: params[:email_address],
        class: "block rounded-xl focus:border-pastel-blue bg-white px-4 py-3 mt-2 w-full text-lg drop-shadow-md drop-shadow-pastel-purple" %>
    </div>

    <div class="my-5">
      <%= form.password_field :password,
        required: true,
        autocomplete: "current-password",
        placeholder: t(".password_placeholder"),
        maxlength: 72,
        class: "block rounded-xl focus:border-pastel-blue bg-white px-4 py-3 mt-2 w-full text-lg drop-shadow-md drop-shadow-pastel-purple" %>
    </div>

    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
      <div class="inline">
        <%= form.submit t(".sign_in"), class: "w-full sm:w-auto text-center rounded-xl px-6 py-3 bg-purple-400 text-white font-semibold cursor-pointer drop-shadow-md drop-shadow-pastel-purple" %>
      </div>

      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        <%= link_to t(".forgot_password"), new_password_path, class: "text-blue-400 underline" %>
        <%= link_to t(".no_account"), new_user_path, class: "text-blue-400 underline" %>
      </div>
    </div>
  <% end %>
</div>
